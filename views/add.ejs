<html lang="en">
<head>
    <title>AudioWave Inc.</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="styles.css">
    <link rel="icon" href="AudiowaveIcon.ico"

    <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css"> <!--FONT AWESOME-->
    <link rel="stylesheet" href="dist/css/adminlte.min.css"> <!--THEME STYLE-->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700">
</head>

<body class="hold-transition sidebar-mini">

    <div class="wrapper">
        
        <nav class="main-header navbar navbar-expand navbar-dark">
            <ul class="navbar-nav">
                <li class=nav-item>
                <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                    <i class="fas fa-bars"></i>
                </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href='/' class="nav-link">Home</a>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="#" class="brand-link">
                <img src="AWLogo.jpg" alt="AudioWave Logo" class="brand-image img-circle elevation-4 zoom">
                <span class="brand-text font-weight-heavy"><i>AudioWave Inc.</i></span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accodition="false">
                        <li class="nav-item dotdivide">
                            <a href="/create" class="nav-link">
                                <i class="nav-icon far fa-circle text-info"></i>
                                    <p>Add Product</p>
                            </a>
                        </li>
                        <li class="nav-item dotdivide">
                            <a href="/updateStock" class="nav-link">
                              <i class="nav-icon far fa-circle text-info"></i>
                              <p class="text">Update Stock</p>
                            </a>
                          </li>
                        <li class="nav-item dotdivide">
                            <a href="/deleteProduct" class="nav-link">
                                <i class="nav-icon far fa-circle text-info"></i>
                                    <p>Delete Product</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                
            </div>
        </aside>
        <div class="content-wrapper">

            <section class="content-header">
                <h1 class="main_heading"><b>Headphones Inventory Management System</b></h1>
            </section>
            <section class="content">
                <h4 class="c1"><hr>Add a New Product<hr></h4>
                <form class="quick-form" action="/AddData" method="POST">

                    <label>Product ID:</label>
                    <input type="number" class="form-control-sm" placeholder="Enter Product ID:" name="Product_ID"><br>

                    <label>Product Name:</label>
                    <input type="text" class="form-control-sm" placeholder="Enter Product Name:" name="Product_Name"><br>
                    
                    <label>Model Number:</label>
                    <input type="text" class="form-control-sm" placeholder="Enter Model Number:" name="Model_Number"><br>

                    <label>Brand:</label>
                    <input type="text" class="form-control-sm" placeholder="Enter Brand:" name="Brand"><br>

                    <label>Connectivity Technology:</label>
                    <input type="text" class="form-control-sm" placeholder="Enter Connectivity Technology:" name="Connectivity_Technology"><br>

                    <label>Colour:</label>
                    <input type="text" class="form-control-sm" placeholder="Enter Product Colour:" name="Colour"><br>

                    <label>Fit Type:</label>
                    <input type="text" class="form-control-sm" placeholder="Enter Fit Type:" name="Fit_Type"><br>

                    <label>Stock:</label>
                    <input type="number" class="form-control-sm" placeholder="Enter Stock:" name="Stock"><br>

                    <label>Weight:</label>
                    <input type="text" class="form-control-sm" placeholder="Enter Product Weight:" name="Item_Weight"><br>

                    <label>Average Customer Rating:</label>
                    <input type="number" class="form-control-sm" placeholder="Enter Rating:" name="Rating"><br>

                    <label>Price:</label>
                    <input type="number" class="form-control-sm" placeholder="Enter Price:" name="Price"><br>

                    <button type="submit" class="jumbotron-sm">Submit</button>
                </form>
            </section>
        </div>
    </div>
</body>
</html>
