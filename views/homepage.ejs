<html lang="en">
<head>
    <title>AudioWave Inc.</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="styles.css">
    <link rel="icon" href="AudiowaveIcon.ico"

    <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css"> <!--FONT AWESOME-->
    <link rel="stylesheet" href="dist/css/adminlte.min.css"> <!--THEME STYLE-->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700">
</head>

<body class="hold-transition sidebar-mini">

    <div class="wrapper">
        
        <nav class="main-header navbar navbar-expand navbar-dark">
            <ul class="navbar-nav">
                <li class=nav-item>
                <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                    <i class="fas fa-bars"></i>
                </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href='/' class="nav-link">Home</a>
                </li>
            </ul>
        </nav>
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <a href="#" class="brand-link">
                <img src="AWLogo.jpg" alt="AudioWave Logo" class="brand-image img-circle elevation-4 zoom">
                <span class="brand-text font-weight-heavy"><i>AudioWave Inc.</i></span>
            </a>
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accodition="false">
                        <li class="nav-item dotdivide">
                            <a href="/create" class="nav-link">
                                <i class="nav-icon far fa-circle text-danger"></i>
                                    <p>Add Product</p>
                            </a>
                        </li>
                        <li class="nav-item dotdivide">
                            <a href="/updateStock" class="nav-link">
                              <i class="nav-icon far fa-circle text-danger"></i>
                              <p class="text">Update Stock</p>
                            </a>
                          </li>
                        <li class="nav-item dotdivide">
                            <a href="/deleteProduct" class="nav-link">
                                <i class="nav-icon far fa-circle text-danger"></i>
                                    <p>Delete Product</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                
            </div>
        </aside>
        <div class="content-wrapper">
            <section class="content-header">
                <h1 class="main_heading"><b>Headphones Inventory Management System</b></h1>
            </section>
            <section class="content">
                <div class="card">
                    <div class="card-header">
                        <h3 center class="card-title"><hr><b>PRODUCT DETAILS</b><hr></h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip"  title="Remove">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    <div class="card-body table-responsive p-0" style="height:400px;">
                        <table class="table table-striped table-head-fixed text-nowrap">
                            <thead> 
                                <tr>
                                    <th>Product ID</th>
                                    <th>Product Name</th>
                                    <th>Model Number</th>
                                    <th>Brand</th>
                                    <th>Connectivity Technology</th>
                                    <th>Colour</th>
                                    <th>Fit Type</th>
                                    <th>Stock</th>
                                    <th>Weight</th>
                                    <th>Customer Rating</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0;i<data.length;i++){%>
                                    <tr>
                                        <td><%=data[i].Product_ID%></td>
                                        <td><%=data[i].Product_Name%></td>
                                        <td><%=data[i].Model_Number%></td>
                                        <td><%=data[i].Brand%></td>
                                        <td><%=data[i].Connectivity_Technology%></td>
                                        <td><%=data[i].Colour%></td>
                                        <td><%=data[i].Fit_Type%></td>
                                        <td><%=data[i].Stock%></td>
                                        <td><%=data[i].Item_Weight%></td>
                                        <td><%=data[i].Rating%></td>
                                        <td><%=data[i].Price%></td>
                
                                    </tr>
                                <%}%>
                            </tbody>
                        </table>
                    </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</body>
</html>